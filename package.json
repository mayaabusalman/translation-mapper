{
  "name": "translationMapper",
  "displayName": "translation-mapper",
  "description": "",
  "publisher": "MayaAbuSalman",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.50.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mayaabusalman/translation-mapper"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:handlebars",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "translationMapper.findTranslation",
        "title": "Find Translation"
      }
    ],
    "keybindings": [
      {
        "command": "translationMapper.findTranslation",
        "key": "cmd+click",
        "when": "editorLangId == handlebars || editorLangId == typescript || editorLangId == javascript"
      }
    ],
    "languages": [
      {
        "id": "handlebars",
        "extensions": [
          ".hbs"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js"
        ]
      }
    ],
    "grammars": [
      {
        "language": "handlebars",
        "scopeName": "source.handlebars",
        "path": "./syntaxes/handlebars.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Translation Mapper Settings",
      "properties": {
        "translationMapper.translationFilePaths": {
          "type": "array",
          "description": "List of paths to translation files to search for keys.",
          "default": [
            "lib/shared/translations/en-us.yaml",
            "lib/simon-shared/translations/en-us.yaml",
            "lib/partner/translations/en-us.yaml",
            "lib/quoting/translations/en-us.yaml",
            "translations/en-us.yaml",
            "en-us.yaml",
            "en.json"
          ],
          "items": {
            "type": "string"
          }
        },
        "translationMapper.defaultLanguage": {
          "type": "string",
          "description": "Default language code for translation files.",
          "default": "en-us"
        },
        "translationMapper.defaultTranslationFileExtension": {
          "type": "string",
          "description": "Default extension for translation files.",
          "default": "yaml"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.50.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  }
}
